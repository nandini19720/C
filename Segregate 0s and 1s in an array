class Solution {
    void segregate0and1(int[] arr, int n) {
        int count=0;
        int i;
            for( i=0;i<n;i++){
                if(arr[i]==0){
                    count++;
                }
            }
                for( i=0;i<count;i++){
                    arr[i]=0;
                }
               for( i=count;i<n;i++){
                   arr[i]=1;
               }
                }
           }
                 
    


   
     
