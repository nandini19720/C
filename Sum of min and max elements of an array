class Solution
{ 
    public static int findSum(int A[],int N) 
    {
        int sum=0;
       int max=Integer.MIN_VALUE;
       int min=Integer.MAX_VALUE;
       for(int i=0;i<N;i++){
           if(A[i]>max){
               max=A[i];
           }
           if(A[i]<min){
               min=A[i];
           }
       }
       sum=min+max;
       return sum;
        
    }
}
