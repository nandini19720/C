class Solution
{
    //Function to find the minimum element in sorted and rotated array.
    static int minNumber(int arr[], int low, int high)
    {
        int min=Integer.MAX_VALUE;
        while(low<=high){
            int mid=(low+high)/2;
            min=Math.min(min,arr[mid]);
                if(arr[low]<=arr[mid]){
                    min=Math.min(arr[low],min);
                    low=mid+1;
                }
            else{
                high=mid-1;
            }
        }
        return min;
        
    }
}
